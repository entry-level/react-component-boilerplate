{
  "name": "react-component-boilerplate",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "clean:dist": "rimraf dist/*",
    "build": "npm run clean:dist && rollup -c",
    "build:watch": "npm run clean:dist && rollup -c -w",
    "compile": "npm run clean:dist && tsc",
    "cmpile:watch": "npm run clean:dist && tsc -w",
    "format": "prettier --write \"src/**/*.{js,ts,tsx}\"",
    "format:check": "prettier --list-different \"src/**/*.{js,ts,tsx}\"",
    "lint": "tslint -c tslint.json \"src/**/*.{ts,tsx}\"",
    "lint:fix": "tslint -c tslint.json \"src/**/*.{ts,tsx}\" --fix",
    "precommit": "lint-staged",
    "commitmsg": "commitlint -E GIT_PARAMS",
    "release": "standard-version"
  },
  "lint-staged": {
    "{examples_src,src}/**/*.{js,ts,tsx}": [
      "npm run format",
      "npm run lint:fix",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@gitlab.com/forsigner/react-component-boilerplate.git"
  },
  "author": "forsigner",
  "license": "MIT",
  "bugs": {
    "url": "https://gitlab.com/forsigner/react-component-boilerplate/issues"
  },
  "homepage": "https://gitlab.com/forsigner/react-component-boilerplate#README",
  "devDependencies": {
    "@commitlint/cli": "^7.0.0",
    "@commitlint/config-conventional": "^7.0.1",
    "@types/react": "^16.4.9",
    "@types/react-dom": "^16.0.7",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.2",
    "prettier": "^1.14.2",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "rimraf": "^2.6.2",
    "rollup": "^0.64.1",
    "rollup-plugin-typescript": "^0.8.1",
    "standard-version": "^4.4.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.14.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-plugin-prettier": "^1.3.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.0.1"
  },
  "peerDependencies": {
    "react": "^16.4.2",
    "react-dom": "^16.4.2"
  },
  "dependencies": {
    "react-component-boilerplate": "^0.2.3"
  }
}
